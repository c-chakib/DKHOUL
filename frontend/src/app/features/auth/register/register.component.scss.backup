/* ============================================
   MODERN COMPACT REGISTER PAGE - MD3
   ============================================ */

.register-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
  padding: 2rem;
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -25%;
    width: 50%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: pulse 15s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.5; }
    50% { transform: scale(1.1) rotate(180deg); opacity: 0.8; }
  }
}

.register-container {
  max-width: 1200px;
  width: 100%;
  display: grid;
  grid-template-columns: 2fr 3fr;
  gap: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 32px;
  overflow: hidden;
  box-shadow: 0 25px 70px rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}

/* ============================================
   LEFT SIDE - BRANDING
   ============================================ */
.register-brand {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 3rem;
  display: flex;
  align-items: center;
  color: white;
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }
}

.brand-content {
  position: relative;
  z-index: 1;
}

.brand-logo {
  margin-bottom: 3rem;

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    letter-spacing: -1px;
  }

  .brand-tagline {
    font-size: 1rem;
    opacity: 0.9;
    margin: 0;
  }
}

.brand-features {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.feature-item {
  display: flex;
  gap: 1rem;
  align-items: flex-start;

  .material-icons {
    font-size: 2rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.75rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
  }

  h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.125rem;
    font-weight: 600;
  }

  p {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.85;
  }
}

/* ============================================
   RIGHT SIDE - FORM
   ============================================ */
.register-form-wrapper {
  padding: 3rem;
  overflow-y: auto;
  max-height: 90vh;

  /* Custom Scrollbar */
  &::-webkit-scrollbar {
    width: 8px;
  }

  &::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }

  &::-webkit-scrollbar-thumb {
    background: #6366f1;
    border-radius: 10px;

    &:hover {
      background: #4f46e5;
    }
  }
}

.register-form-container {
  max-width: 500px;
  margin: 0 auto;
}

.form-header {
  text-align: center;
  margin-bottom: 2rem;

  h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
  }

  p {
    color: #6b7280;
    margin: 0;
    font-size: 1rem;
  }
}

/* ============================================
   FORM FIELDS
   ============================================ */
.register-form {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;

  label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
  }
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f9fafb;
  border: 2px solid #e5e7eb;
  border-radius: 12px;
  transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);

  &:focus-within {
    background: white;
    border-color: #6366f1;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
  }

  .material-icons {
    padding: 0 1rem;
    color: #9ca3af;
    font-size: 1.25rem;
  }

  input {
    flex: 1;
    padding: 1rem 1rem 1rem 0;
    border: none;
    background: transparent;
    font-size: 1rem;
    color: #1f2937;
    outline: none;

    &::placeholder {
      color: #9ca3af;
    }

    &.error {
      color: #ef4444;
    }
  }
}

.toggle-password {
  padding: 0.5rem 1rem;
  background: transparent;
  border: none;
  cursor: pointer;
  color: #6b7280;
  transition: color 200ms;

  &:hover {
    color: #6366f1;
  }

  .material-icons {
    font-size: 1.25rem;
    padding: 0;
  }
}

.error-message {
  font-size: 0.75rem;
  color: #ef4444;
  margin-left: 0.5rem;
}

/* ============================================
   ROLE SELECTOR
   ============================================ */
.role-selector {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.role-option {
  cursor: pointer;

  input[type="radio"] {
    display: none;
  }

  .role-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1.5rem 1rem;
    background: #f9fafb;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);

    .material-icons {
      font-size: 2rem;
      color: #6b7280;
      transition: color 300ms;
    }

    span:last-child {
      font-size: 0.875rem;
      font-weight: 600;
      color: #374151;
    }
  }

  &.selected .role-card {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-color: #6366f1;
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);

    .material-icons {
      color: white;
    }

    span:last-child {
      color: white;
    }
  }

  &:not(.selected) .role-card:hover {
    border-color: #6366f1;
    box-shadow: 0 2px 10px rgba(99, 102, 241, 0.1);
  }
}

/* ============================================
   CHECKBOX
   ============================================ */
.checkbox-field {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  cursor: pointer;
  font-size: 0.875rem;
  color: #4b5563;

  input[type="checkbox"] {
    width: 1.125rem;
    height: 1.125rem;
    margin-top: 0.125rem;
    cursor: pointer;
    accent-color: #6366f1;
  }

  a {
    color: #6366f1;
    text-decoration: none;
    font-weight: 600;

    &:hover {
      text-decoration: underline;
    }
  }
}

/* ============================================
   SUBMIT BUTTON
   ============================================ */
.submit-btn {
  position: relative;
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
  border-radius: 100px;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  &:hover:not(:disabled) {
    box-shadow: 0 6px 25px rgba(99, 102, 241, 0.6);
    transform: translateY(-2px);

    &::before {
      width: 300px;
      height: 300px;
    }
  }

  &:active {
    transform: translateY(0);
  }

  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  &.loading {
    pointer-events: none;
  }
}

.spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ============================================
   FORM FOOTER
   ============================================ */
.form-footer {
  text-align: center;
  margin-top: 1rem;

  p {
    color: #6b7280;
    margin: 0;
    font-size: 0.875rem;
  }

  .login-link {
    color: #6366f1;
    text-decoration: none;
    font-weight: 600;
    margin-left: 0.25rem;

    &:hover {
      text-decoration: underline;
    }
  }
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */
@media (max-width: 968px) {
  .register-container {
    grid-template-columns: 1fr;
  }

  .register-brand {
    padding: 2rem;

    .brand-logo h1 {
      font-size: 2rem;
    }

    .brand-features {
      flex-direction: row;
      gap: 1rem;
      overflow-x: auto;

      .feature-item {
        min-width: 200px;
      }
    }
  }
}

@media (max-width: 640px) {
  .register-page {
    padding: 1rem;
  }

  .register-form-wrapper {
    padding: 2rem 1.5rem;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .role-selector {
    grid-template-columns: 1fr;
  }

  .register-brand {
    display: none;
  }

  .register-container {
    border-radius: 24px;
  }
}
