{
  "version": 2,
  "buildCommand": "npm run build --prefix ./frontend && node post-build.js",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install --prefix ./frontend --legacy-peer-deps",
  "framework": null,
  "env": {
    "NODE_VERSION": "20"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}