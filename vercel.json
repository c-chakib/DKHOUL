{
  "version": 2,
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build && cd .. && node post-build.js",
  "outputDirectory": "frontend/dist/browser",
  "installCommand": "echo 'Skipping root install - will install in frontend'",
  "framework": null,
  "ignoreCommand": "git diff HEAD^ HEAD --quiet ./frontend",
  "env": {
    "NODE_VERSION": "20"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin-allow-popups"
        }
      ]
    }
  ]
}