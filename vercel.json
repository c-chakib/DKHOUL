{
  "version": 2,
  "buildCommand": "cd frontend && npm run build && cd .. && node post-build.js",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install --legacy-peer-deps || true",
  "framework": null,
  "env": {
    "NODE_VERSION": "20"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}